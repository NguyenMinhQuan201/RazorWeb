@model IEnumerable<RazorWeb.Models.VM.LoaiSanPhamVm>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a type="button" class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alias)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrangThai)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alias)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
            <td>
                <a type="button" class="btn btn-info" asp-action="Edit" asp-route-id="@item.IDLoaiSanPham">Edit</a> |
                <a type="button" class="btn btn-warning" asp-action="Details" asp-route-id="@item.IDLoaiSanPham">Details</a> |
                <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IDLoaiSanPham">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
