@model List<Data.Models.SanPham>

<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="filter__controls">
                    <li style="color: #111111">Hot Sales</li>
                </ul>
            </div>
        </div>
        <div class="row product__filter">
            @foreach (var item in Model)
            {
                var i = 0;

                if (item.Mota == "Sale" && i < 4)
                {
                    i++;
                    <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals">
                        <div class="product__item sale">
                            <div class="product__item__pic set-bg" style="background-image: url('/Content/img/@Html.DisplayFor(moldelItem => item.Images)')">
                                <span class="label">Sale</span>
                            </div>
                            <div class="product__item__text">
                                <h6>Multi-pocket Chest Bag</h6>
                                <a class="add-cart" href="@Url.Action("Details", "Events", new { id = item.IDSanPham })">Go Detail </a>
                                <div class="rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star-o"></i>
                                </div>
                                <h5>@Html.DisplayFor(moldelItem => item.Gia)</h5>
                            </div>
                        </div>
                    </div>
                }
            }
            @foreach (var item in Model)
            {
                var j = 0;

                if (item.Mota == "New" && j < 4)
                {
                    j++;
                    <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals">
                        <div class="product__item sale">
                            <div class="product__item__pic set-bg" style="background-image: url('/Content/img/@Html.DisplayFor(moldelItem => item.Images)')">
                                <span class="label">New</span>
                            </div>
                            <div class="product__item__text">
                                <h6>Multi-pocket Chest Bag</h6>
                                <a class="add-cart" href="@Url.Action("Details", "Events", new { id = item.IDSanPham })">Go Detail </a>
                                <div class="rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star-o"></i>
                                </div>
                                <h5>@Html.DisplayFor(moldelItem => item.Gia)</h5>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

